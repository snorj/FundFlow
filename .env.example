# Django Core Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# For development (SQLite) - uncomment this line and comment PostgreSQL line
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL) - recommended for Docker deployment
DATABASE_URL=postgresql://fundflow_user:fundflow_password@db:5432/fundflow_db

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# CORS Settings (adjust these for your domain in production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Application Settings
DJANGO_SETTINGS_MODULE=FundFlow.settings

# Optional: Add your domain for production
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1,0.0.0.0

# Encryption key for integrations - generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DJANGO_FERNET_KEY=your-fernet-key-here
